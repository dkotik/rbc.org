---
import '../styles/default.sass';
import { en, ru } from './data.mjs';
const { content } = Astro.props;
const isRussian = content?.url?.startsWith('/ru/') || content?.url === '/ru' || false;
const data = isRussian ? ru : en;
---
<html>
  <head>
    <meta charset="utf-8">
    <title>{data.title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body class={content.class}>
    <main class="container">
        <div id="logo">
          <div id="lang">
            { isRussian
                ? <a href="/index.html"><img src="/img/usa.svg" /></a>
                : <a href="/ru/index.html"><img src="/img/russia.svg" /></a>
            }
          </div>
        </div>
        <slot name="hero" />
        <nav class="navbar">
          <div class="navbar-brand">
            { isRussian
                ? <a class="navbar-item" href="/ru/index.html">Главная</a>
                <a class="navbar-item" href="/ru/about.html">О Нас</a>
                <a class="navbar-item" href="/ru/sermons.html">Проповеди</a>
                <a class="navbar-item" href="/ru/contact.html">Контакты</a>

                : <a class="navbar-item" href="/index.html">Home</a>
                <a class="navbar-item" href="/about.html">About</a>
                <a class="navbar-item" href="/sermons.html">Sermons</a>
                <a class="navbar-item" href="/contact.html">Contact</a>
            }
          </div>
        </nav>
        <section class="content">
          <slot />
        </section>
        </main>
    <footer>
        <slot name="footer">
            <section class="container has-text-centered">
                  <small>&#169; Copyright {data.today.getFullYear()} • {data.title} • {data.address} • {data.phone}</small>
            </section>
        </slot>
    </footer>

  </body>
</html>
